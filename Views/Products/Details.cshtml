@model AspnetCoreCRUDApp.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<h1>Details</h1>
<dl class="row">
    <dt class="col-sm-2">Name</dt><dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Price</dt><dd class="col-sm-10">@Model.Price</dd>
    <dt class="col-sm-2">Description</dt><dd class="col-sm-10">@Model.Description</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</p>
